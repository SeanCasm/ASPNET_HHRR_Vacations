@model ASPNET_HHRR_Vacations.Models.Vacation

@{
    ViewData["Title"] = "Welcome";
}

<section>
    <h3>Vacations ticket</h3>
    <hr />
    <p>
        This portal is for <strong class="text-success">create a vacations solicitude.</strong>.
    </p>
</section>
@using (Html.BeginForm("CreateTicket", "EmployeeHome", FormMethod.Post))
{
    <div class="mt-3 d-flex flex-column gap-3 w-50">
        @Html.HiddenFor(model => model.EmployeeId)
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, new { @class = "control-label" })
            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, new { @class = "control-label" })
            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>


        <div class="form-group mt-3">
            <input type="submit" value="Request" class="btn btn-primary" />
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            @if (TempData["Success"] != null)
            {
                <p class="text-success">@TempData["Success"]</p>
            }
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<div class="mt-5">
    <a asp-action="Index" asp-controller="EmployeeHome">Back</a>
</div>